{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.Text",
          "placeholder": "Placeholder text",
          "isMultiline": true,
          "spacing": "None",
          "height": "stretch"
        }
      ],
      "height": "stretch"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": 50
            },
            {
              "type": "Column",
              "width": 12,
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "Save",
                      "style": "positive",
                      "associatedInputs": "none"
                    }
                  ],
                  "horizontalAlignment": "Right",
                  "spacing": "None",
                  "height": "stretch"
                }
              ],
              "spacing": "None",
              "horizontalAlignment": "Right",
              "height": "stretch",
              "rtl": false
            }
          ],
          "horizontalAlignment": "Center"
        }
      ]
    }
  ]
}